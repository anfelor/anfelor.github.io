
# Haskell files
 - patterns:
   - ^[^\#\.]*\.hs$
   - ^package.yaml$
   commands:
   - stack build --fast
   - stack exec blog
   - tree blog/


# External files (css, typescript)
 - patterns:
   - ^([^\#\.]*\/)?([^\#\.\/\\]*\.(scss|ts))$
   commands:

   # If the external file updated, it has to be
   # included, thus we have to recompile the whole project.
   - stack clean
   - stack build --fast
   - stack exec blog
